<div class="d-flex justify-content-between align-items-center mb-3">
  <h1 class="mb-0"><%= @article.title %></h1>
  <div>
    <%= link_to "Edit", edit_article_path(@article), class: "btn btn-outline-secondary me-2" %>

    <%# In Rails 7 ist button_to fÃ¼r DELETE am robustesten %>
    <%= button_to "Delete",
                  article_path(@article),
                  method: :delete,
                  form: { data: { turbo_confirm: "Are you sure?" } },
                  class: "btn btn-outline-danger" %>
  </div>
</div>

<p class="lead"><%= simple_format(@article.content) %></p>

<hr>
<%= link_to "Back", articles_path, class: "btn btn-link" %>
