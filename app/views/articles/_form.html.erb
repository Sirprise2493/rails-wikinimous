<%= form_with model: article, class: "card p-3" do |f| %>
  <div class="mb-3">
    <%= f.label :title, class: "form-label" %>
    <%= f.text_field :title, class: "form-control", required: true %>
  </div>

  <div class="mb-3">
    <%= f.label :content, class: "form-label" %>
    <%= f.text_area :content, rows: 8, class: "form-control", required: true %>
  </div>

  <div class="d-flex gap-2">
    <%= f.submit class: "btn btn-primary" %>
    <% if article.persisted? %>
      <%= link_to "Cancel", article_path(article), class: "btn btn-outline-secondary" %>
    <% else %>
      <%= link_to "Cancel", articles_path, class: "btn btn-outline-secondary" %>
    <% end %>
  </div>
<% end %>
